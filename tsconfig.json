{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "../",
        "declaration": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noResolve": false,
        "esModuleInterop":true,
        "lib": [
            "es2017",
            "dom"
        ],
        "jsx": "react"
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules*",
        "tsconfig.json"
    ]
}